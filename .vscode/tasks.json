{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Incremental Build",
            "type": "shell",
            "windows": {
                "command": ".\\build.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Force Build",
            "type": "shell",
            "windows": {
                "command": ".\\build.bat /force"
            },
            "group": "build"
        },
        {
            "label": "Build Documentation",
            "type": "shell",
            "windows": {
                "command": ".\\build.bat /doc"
            },
            "group": "build"
        }
    ]
}